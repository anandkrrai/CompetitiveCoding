<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.dance">

    <ScrollView
        android:id="@+id/art_scrollViewDance"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_ehq_dance_production"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/text_padding_left"
            android:text="@string/ehq_dance_originals"
            style="@style/MyCustomFontStyle"
            />

        <Button
            android:id="@+id/button_more_ehq_dance_original"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@drawable/spotify_button"
            android:text="@string/see_more"
            android:textColor="@android:color/white"
            android:textSize="@dimen/show_more_size"
            />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_ehq_dance_original"
        android:layout_width="match_parent"
        android:layout_height="225dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dance_chreography"
            style="@style/MyCustomFontStyle"
            />

        <Button
            android:id="@+id/button_more_dance_chreography"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@drawable/spotify_button"
            android:text="@string/see_more"
            android:textColor="@android:color/white"
            android:textSize="@dimen/show_more_size"
            />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_chreograpgy"
        android:layout_width="match_parent"
        android:layout_height="225dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_dj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dance_cover"
                style="@style/MyCustomFontStyle"
            />
            <Button
                android:id="@+id/button_more_dance_covers"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@drawable/spotify_button"
                android:text="@string/see_more"
                android:textColor="@android:color/white"
                android:textSize="@dimen/show_more_size"
                />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_ehq_dance_covers"
            android:layout_width="match_parent"
            android:layout_height="225dp" />

    </LinearLayout>
    </LinearLayout>
    </ScrollView>

</FrameLayout>