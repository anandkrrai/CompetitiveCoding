<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.music">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_dastan"
                    style="@style/MyCustomFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/dastan"
                    />
                <Button
                    android:id="@+id/button_more_dastan"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="@drawable/spotify_button"
                    android:text="@string/see_more"
                    android:textSize="@dimen/show_more_size"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_daston"
                android:layout_width="match_parent"
                android:layout_height="225dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_poetry"
                    style="@style/MyCustomFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Poetry"
                    />
                <Button
                    android:id="@+id/button_more_poetry"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="@drawable/spotify_button"
                    android:text="@string/see_more"
                    android:textSize="@dimen/show_more_size"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_poetry"
                android:layout_width="match_parent"
                android:layout_height="225dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_original"
                    style="@style/MyCustomFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Story"
                    />
                <Button
                    android:id="@+id/button_more_story"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="@drawable/spotify_button"
                    android:text="@string/see_more"
                    android:textSize="@dimen/show_more_size"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_story"
                android:layout_width="match_parent"
                android:layout_height="225dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>